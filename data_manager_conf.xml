<data_managers>
    <data_manager tool_file="data_manager/novoalign_index_builder.xml" id="novoalign_index_builder" version="0.0.1">
        <data_table name="novo_indexes">
            <output>
                <column name="value" />
                <column name="dbkey" />
                <column name="name" />
                <column name="path" output_ref="out_file" >
                    <move type="file">
                        <source>${path}</source>
                        <target base="${GALAXY_DATA_INDEX_DIR}">${path}</target>
                    </move>
                    <value_translation>${GALAXY_DATA_INDEX_DIR}/${path}</value_translation>
                </column>
            </output>
        </data_table>
    </data_manager>
</data_managers>